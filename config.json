{
  "project": {
    "name": "CE103 Quiz - Bright Theme",
    "version": "2.0.0",
    "description": "Interactive quiz and flashcards with smart code highlighting",
    "author": "CE103 Development Team"
  },
  "features": {
    "brightTheme": true,
    "mathJaxSupport": true,
    "assemblyHighlighting": true,
    "falsePositivePrevention": true,
    "vietnameseTextSupport": true,
    "responsiveDesign": true
  },
  "quiz": {
    "totalQuestions": 230,
    "questionsPerQuiz": 40,
    "timeLimit": 70,
    "passingScore": 50
  },
  "flashcards": {
    "totalCards": 60,
    "categories": [
      "8051 Architecture",
      "Assembly Instructions", 
      "Memory Organization",
      "Timers and Counters",
      "Interrupts",
      "Programming Concepts"
    ]
  },
  "highlighting": {
    "assemblyInstructions": [
      "MOV", "JMP", "ADD", "SUB", "MUL", "DIV",
      "SETB", "CLR", "MOVC", "PUSH", "POP", 
      "CALL", "RET", "DJNZ", "CJNE", "JZ", "JNZ", "JC", "JNC"
    ],
    "technicalTerms": [
      "ROM", "RAM", "EEPROM", "UART", "SPI", "I2C", "PWM",
      "ADC", "DAC", "CPU", "ALU", "PC", "SP", "DPTR", "ACC",
      "PSW", "IE", "IP", "TCON", "TMOD", "SCON", "SBUF",
      "TH0", "TL0", "TH1", "TL1"
    ],
    "formulaVariables": [
      "T_machine", "f_osc", "T_cycle", "N_instructions"
    ]
  },
  "styling": {
    "codeBlockTheme": "bright",
    "gradientBackgrounds": true,
    "boxShadows": true,
    "animations": true,
    "fonts": {
      "primary": "Arial, sans-serif",
      "code": "'Fira Code', 'Consolas', 'Monaco', 'Courier New', monospace"
    },
    "colors": {
      "primary": "#007bff",
      "success": "#28a745", 
      "warning": "#ffc107",
      "danger": "#dc3545",
      "info": "#17a2b8",
      "codeBackground": "#fef3c7",
      "techTermBackground": "#d1fae5",
      "numberBackground": "#fecaca",
      "formulaBackground": "#e0e7ff"
    }
  },
  "performance": {
    "lazyLoadPrism": true,
    "mathJaxOptimization": true,
    "protectedContentSystem": true,
    "efficientRegexPatterns": true
  },
  "browser": {
    "support": [
      "Chrome 91+",
      "Firefox 88+", 
      "Safari 14+",
      "Edge 91+"
    ],
    "mobile": true,
    "responsive": true
  },
  "api": {
    "questionsEndpoint": "api/get_questions.php",
    "flashcardsEndpoint": "api/flashcards.json",
    "dataFormat": "JSON"
  },
  "testing": {
    "highlightingTests": true,
    "falsePositiveTests": true,
    "mathFormulaTests": true,
    "responsiveTests": true,
    "performanceTests": true
  }
}
